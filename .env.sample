OPENAI_API_KEY=your_openai_api_key_here

APP_NAME=tuukaa API
APP_VERSION=0.1.0
DEBUG=true

# ベクトルストア設定
PERSIST_DIRECTORY=/app/vectorstore
EMBEDDING_MODEL=text-embedding-3-small
ALLOW_RESET=true

# API設定
HOST=0.0.0.0
PORT=8000
WORKERS=1

# LLM設定
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.0
DEFAULT_TOP_K=3
MAX_CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# ファイルアップロード設定
UPLOAD_DIRECTORY=/app/uploads
MAX_FILE_SIZE=10485760

# ウィジェットの設定
# 例 EMBED_API_KEYS=client-a:abc123,client-b:def456
EMBED_API_KEYS=
# 例 ALLOWED_ORIGINS=http://localhost:3000,<https://example.com>
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_RPM=60
DAILY_BUDGET_JPY=50

# Redis設定
REDIS_URL=redis://redis:6379/0

# 料金・トークン上限
MODEL_PRICING="gpt-4o-mini:0.00000060,gpt-4o:0.00001500,gpt-3.5-turbo:0.00000150,gpt-4.1-mini:0.00000060,gpt-5:=0.00003000"
DEFAULT_MAX_OUTPUT_TOKENS=1024